    <h1 class="text-center mb-4">Dergiler</h1>

    <div class="row" id="magazineList">
        @if (Model == null || !Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">Henüz hiç dergi bulunmamaktadır.</div>
            </div>
        }
        else
        {
            @foreach (var m in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="mag-card">
                        <img class="mag-cover" src="@m.ImageUrl" alt="@m.Title" />
                        <div class="p-3">
                            <div class="mag-title">@m.Title</div>
                            <div class="badge-issn">ISSN: @m.ISSN</div>
                            <div class="mag-info">
                                Başlangıç: @m.StartDate.ToString("dd.MM.yyyy")<br />
                                Periyot: @m.Period
                            </div>
                        </div>
                        <div class="mag-footer">
                            <span>ISSN: @m.ISSN</span>
                            <span>@m.StartDate.Year</span>
                        </div>
                        <a href="@Url.Action("Details", "Magazines", new { id = m.Id })" class="btn btn-primary btn-sm btn-details">Detaylar</a>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        (function(){
            const input = document.getElementById('q');
            const btn = document.getElementById('btnSearch');
            const list = document.getElementById('magazineList');

            function formatDateTR(iso){
                if(!iso) return '';
                const d = new Date(iso);
                if(isNaN(d)) return '';
                return d.toLocaleDateString('tr-TR');
            }

            function cardHtml(m){
                // Not: API camelCase dönecekse m.title/m.imageUrl; PascalCase dönerse m.Title/m.ImageUrl.
                const title = m.title ?? m.Title;
                const imageUrl = m.imageUrl ?? m.ImageUrl;
                const issn = m.issn ?? m.ISSN;
                const period = m.period ?? m.Period;
                const id = m.id ?? m.Id;
                const startDate = m.startDate ?? m.StartDate;

                const startText = startDate ? formatDateTR(startDate) : '';

                return `
                <div class="col-md-3 mb-4">
                    <div class="mag-card">
                        <img class="mag-cover" src="${imageUrl || ''}" alt="${title || ''}" />
                        <div class="p-3">
                            <div class="mag-title">${title || ''}</div>
                            <div class="badge-issn">ISSN: ${issn || '-'}</div>
                            <div class="mag-info">
                                Başlangıç: ${startText}<br/>
                                Periyot: ${period || '-'}
                            </div>
                        </div>
                        <div class="mag-footer">
                            <span>ISSN: ${issn || '-'}</span>
                            <span>${startText ? (new Date(startDate)).getFullYear() : ''}</span>
                        </div>
                        <a href="/Magazines/Details/${id}" class="btn btn-primary btn-sm btn-details">Detaylar</a>
                    </div>
                </div>`;
            }

            function render(items){
                if(!items || items.length === 0){
                    list.innerHTML = `<div class="col-12">
                        <div class="alert alert-info text-center">Arama sonucu bulunamadı.</div>
                    </div>`;
                    return;
                }
                list.innerHTML = items.map(cardHtml).join('');
            }

            async function search(){
                const q = input.value.trim();
                const resp = await fetch(`/Magazines/Search?q=${encodeURIComponent(q)}`, { method: 'GET' });
                if(!resp.ok){ console.error('Search failed'); return; }
                const data = await resp.json();
                render(data);
            }

            // Enter + buton ile ara
            btn.addEventListener('click', search);
            input.addEventListener('keydown', (e)=>{
                if(e.key === 'Enter'){ e.preventDefault(); search(); }
            });

            // Debounce ile yazarken ara (opsiyonel, hızlı his)
            let t=null;
            input.addEventListener('input', ()=>{
                clearTimeout(t);
                t = setTimeout(search, 350);
            });
        })();
    </script>
}
