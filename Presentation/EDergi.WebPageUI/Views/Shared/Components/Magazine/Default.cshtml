@model List<EDergi.Application.DTOs.MagazineCreateDto>

@{
    ViewData["Title"] = "Dergiler";
  
}

<style>
    .search-wrap {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .search-input {
        width: 100%;
        padding: 12px 48px 12px 16px;
        border: 1px solid #ddd;
        border-radius: 26px;
        font-size: 0.95rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .search-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: #b0173c;
        color: #fff;
        width: 38px;
        height: 38px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .search-area {
        position: relative;
    }

    .badge-issn {
        display: inline-block;
        padding: 4px 10px;
        background: #eef3ff;
        color: #0d6efd;
        border-radius: 8px;
        font-size: .82rem;
    }

    .mag-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(0,0,0,.08);
        overflow: hidden;
        transition: .3s;
        text-align: center;
    }

        .mag-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 16px rgba(0,0,0,.14);
        }

    .mag-cover {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .mag-title {
        color: #0d6efd;
        font-weight: 600;
        font-size: 1rem;
        margin: 12px 0;
        min-height: 40px;
    }

    .mag-info {
        font-size: .86rem;
        color: #555;
        margin-bottom: 10px;
    }

    .mag-footer {
        display: flex;
        justify-content: space-between;
        font-size: .82rem;
        padding: 8px 12px;
        background: #fafafa;
        border-top: 1px solid #f1f1f1;
    }

    .btn-details {
        display: block;
        width: 100%;
        border-radius: 0 0 12px 12px;
    }
</style>

