@{
    Layout = null;
}
<!doctype html>
<html class="fixed">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Admin Giriş</title>

    <!-- Web Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800|Shadows+Into+Light" rel="stylesheet">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/admin_content/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/admin_content/vendor/animate/animate.compat.css">
    <link rel="stylesheet" href="~/admin_content/vendor/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/admin_content/vendor/boxicons/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/admin_content/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/admin_content/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/admin_content/css/theme.css" />
    <link rel="stylesheet" href="~/admin_content/css/custom.css" />

    <!-- Head Libs -->
    <script src="~/admin_content/vendor/modernizr/modernizr.js"></script>
</head>
<body>
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo float-start">
                <img src="~/admin_content/img/erciyes_logo.png" height="100" alt="Erciyes Üniversitesi Logo" />
            </a>

            @RenderBody()

            <p class="text-center text-muted mt-3 mb-3">Porto Admin</p>
        </div>
    </section>

    <!-- Vendor JS -->
    <script src="~/admin_content/vendor/jquery/jquery.js"></script>
    <script src="~/admin_content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin_content/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/admin_content/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/admin_content/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/admin_content/js/theme.js"></script>
    <script src="~/admin_content/js/custom.js"></script>
    <script src="~/admin_content/js/theme.init.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
