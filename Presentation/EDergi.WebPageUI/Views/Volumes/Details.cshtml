@model EDergi.Domain.Entitites.Volume

<div class="container mt-4">
    <h3>@Model.Year - Cilt @Model.Title</h3>

    @if (Model.Issues?.Any() == true)
    {
        <ul class="list-group">
            @foreach (var issue in Model.Issues)
            {
                <li class="list-group-item">
                    <strong>Sayı @issue.IssueNumber</strong> -
                    @issue.PublishDate.ToString("dd.MM.yyyy")

                    <div class="mt-2">
                        @if (issue.Articles?.Any() == true)
                        {
                            <ul class="list-unstyled">
                                @foreach (var article in issue.Articles)
                                {if(@article.IsApproved){
                                    <li class="mb-3">
                                        <h5>@article.Title</h5>
                                        <p><strong>Proje Numarası:</strong> @article.ProjectNumber</p>
                                        <p><strong>Yazar:</strong> @article.ArticleAuthors</p>
                                        <p><strong>Destekleyen Kurum:</strong> @article.SupportingInstitution</p>
                                        <p><strong>Anahtar Kelimeler:</strong> @article.Keywords</p>
                                        <p><strong>Referans:</strong> @article.Reference</p>
                                        <small class="text-muted">Yayın: @article.CreatedDate.ToString("dd.MM.yyyy")</small>
                                    </li>
                                }}
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">Henüz makale bulunmamaktadır.</p>
                        }
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Bu cilde ait sayı bulunmamaktadır.</p>
    }
</div>
