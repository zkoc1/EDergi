@model EDergi.Web.Areas.Admin.Models.VolumeViewModel

@{
    ViewData["Title"] = "Yeni Cilt Ekle";
    // MagazineId'yi ViewBag'den de kontrol edelim
    var magazineId = Context.Request.Query["magazineId"].ToString();
    if (string.IsNullOrEmpty(magazineId) && ViewBag.MagazineId != null)
    {
        magazineId = ViewBag.MagazineId.ToString();
    }
    Model.MagazineId = Guid.Parse(magazineId);
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow rounded">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Yeni Cilt Ekle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="MagazineId" value="@magazineId" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Cilt Adı</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Year" class="control-label">Yıl</label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Index" asp-route-magazineId="@magazineId" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
