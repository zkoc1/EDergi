@using EDergi.Web.Areas.Admin.Models
@{
    ViewData["Title"] = "Dergi Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<MagazineViewModel>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow rounded">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Dergi Listesi</h4>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus mr-1"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover" id="magazineTable">
                        <thead class="thead-light">
                            <tr>
                                <th>Başlık</th>
                                <th>ISSN</th>
                                <th>Başlangıç Tarihi</th>
                                <th class="text-right">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var magazine in Model)
                            {
                                <tr>
                                    <td class="align-middle">@magazine.Title</td>
                                    <td class="align-middle">@magazine.ISSN</td>
                                    <td class="align-middle">@magazine.StartDate.ToShortDateString()</td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@magazine.Id"
                                               class="btn btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@magazine.Id"
                                               class="btn btn-outline-danger" title="Sil"
                                               onclick="return confirm('Bu dergiyi silmek istediğinize emin misiniz?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                          
                                            <a asp-controller="Volume" asp-action="Index" asp-route-magazineId="@magazine.Id"
                                               class="btn btn-outline-secondary" title="Ciltler">
                                                <i class="fas fa-book"></i>
                                            </a>
                                            <a asp-controller="MDocument" asp-action="Index" asp-route-magazineId="@magazine.Id"
                                               class="btn btn-outline-info" title="Dokümanlar">
                                                <i class="fas fa-file"></i>
                                            </a>
                                            <a asp-controller="ReadIndex" asp-action="Index" asp-route-magazineId="@magazine.Id"
                                               class="btn btn-outline-warning" title="İndeksler">
                                                <i class="fas fa-list"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
