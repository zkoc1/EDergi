@using EDergi.Web.Areas.Admin.Models
@{
    ViewData["Title"] = "Dergi Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<MagazineViewModel>

<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Kolon genişliğini küçült -->
        <div class="card shadow rounded">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Dergi Listesi</h4>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus mr-1"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover" id="magazineTable">
                        <thead class="thead-light">
                            <tr>
                                <th>Başlık</th>
                                <th>ISSN</th>
                                <th>Başlangıç Tarihi</th>
                                <th class="text-right">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var magazine in Model)
                            {
                                <tr>
                                    <td class="align-middle">@magazine.Title</td>
                                    <td class="align-middle">@magazine.ISSN</td>
                                    <td class="align-middle">@magazine.StartDate.ToShortDateString()</td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@magazine.Id"
                                               class="btn btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@magazine.Id"
                                               class="btn btn-outline-danger" title="Sil"
                                               onclick="return confirm('Bu dergiyi silmek istediğinize emin misiniz?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            max-width: 100%;
            margin: 0 auto;
        }

        .table th, .table td {
            padding: 0.5rem;
            font-size: 0.9rem;
        }

        .btn-group-sm > .btn {
            padding: 0.2rem 0.4rem;
        }

        .table-responsive {
            overflow-x: auto;
            max-width: 100%;
        }

        .col-md-8 {
            flex: 0 0 66.666667%;
            max-width: 66.666667%; <!--
            Widget genişliğini küçült -->
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#magazineTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
                },
                "responsive": true,
                "dom": '<"top"f>rt<"bottom"lip><"clear">',
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ],
                "pageLength": 10,
                "autoWidth": false
            });
        });
    </script>
}
