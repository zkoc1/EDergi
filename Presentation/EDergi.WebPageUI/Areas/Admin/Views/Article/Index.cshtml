@using EDergi.Web.Areas.Admin.Models
@model List<ArticleViewModel>

@{
    ViewData["Title"] = "Makaleler";
    var issueId = Context.Request.Query["issueId"].ToString();

    // Eğer query string'den gelmediyse, ViewBag'den kontrol edelim
    if (string.IsNullOrEmpty(issueId) && ViewBag.IssueId != null)
    {
        issueId = ViewBag.IssueId.ToString();
    }
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow rounded">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Makaleler</h4>
            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Başlık</th>
                                <th>Anahtar Kelimeler</th>
                                <th>Onay Durumu</th>
                                <th class="text-right">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var article in Model)
                                {
                                    <tr>
                                        <td>@article.Title</td>
                                        <td>@article.Keywords</td>
                                        <td>@(article.IsApproved ? "Onaylandı" : "Onay Bekliyor")</td>
                                        <td class="text-right">
                                            @if (!article.IsApproved)
                                            {
                                                <form asp-action="Approve" method="post" asp-route-id="@article.Id" style="display:inline-block;">
                                                    <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                                                </form>
                                                <form asp-action="Reject" method="post" asp-route-id="@article.Id" style="display:inline-block;">
                                                    <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Bu sayıya ait makale bulunamadı.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
