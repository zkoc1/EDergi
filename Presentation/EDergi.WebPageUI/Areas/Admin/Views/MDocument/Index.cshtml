<!-- Areas/Admin/Views/MDocument/Index.cshtml -->
@model List<EDergi.Domain.Entitites.MDocument>

@{
    ViewData["Title"] = "Dokümanlar";
    var magazineId = Context.Request.Query["magazineId"].ToString();

    // Eğer query string'den gelmediyse, ViewBag'den kontrol edelim
    if (string.IsNullOrEmpty(magazineId) && ViewBag.MagazineId != null)
    {
        magazineId = ViewBag.MagazineId.ToString();
    }
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow rounded">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Dokümanlar</h4>
                    <a asp-action="Create" asp-route-magazineId="@magazineId" class="btn btn-light btn-sm">
                        <i class="fas fa-plus mr-1"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover" id="documentTable">
                        <thead class="thead-light">
                            <tr>
                                <th>Dosya Adı</th>
                                <th>Yükleme Tarihi</th>
                                <th class="text-right">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var document in Model)
                            {
                                <tr>
                                    <td class="align-middle">@document.FileName</td>
                                    <td class="align-middle">@document.CreatedDate.ToShortDateString()</td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@document.Id"
                                               class="btn btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@document.Id"
                                               class="btn btn-outline-danger" title="Sil"
                                               onclick="return confirm('Bu dokümanı silmek istediğinize emin misiniz?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
