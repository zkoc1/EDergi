@using EDergi.Application.DTOs
@model List<AppRoleDetailDto>

@{
    ViewData["Title"] = "Rol Listesi";
}

<div class="container">
    <h2>Rol Listesi</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Rol Ekle</a>
    <table class="table">
        <thead>
            <tr>
                <th>Rol Adı</th>
                <th>Kullanıcı Sayısı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.UserCount</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
