@model WebPageUI.Areas.Admin.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="panel card-sign">
    <div class="card-title-sign mt-3 text-end">
        <h2 class="title text-uppercase font-weight-bold m-0">
            <i class="bx bx-lock me-1 text-6 position-relative top-5"></i> Şifremi Unuttum
        </h2>
    </div>
    <div class="card-body">
        <form asp-action="ForgotPassword" asp-controller="Account" asp-area="Admin" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control form-control-lg" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary mt-2">Gönder</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
