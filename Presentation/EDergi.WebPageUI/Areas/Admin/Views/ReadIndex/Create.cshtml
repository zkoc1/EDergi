@model EDergi.Application.DTOs.ReadIndexCreateDto
@{
    ViewData["Title"] = "Yeni İndeks Ekle";
}

<div class="card shadow-sm rounded-3" style="max-width: 500px; margin:auto; font-size: 0.9rem;">
    <div class="card-header bg-warning text-white py-2 px-3">
        <h5 class="mb-0" style="font-size:1rem;">Yeni İndeks Ekle</h5>
    </div>
    <div class="card-body p-3">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="MagazineId" />

            <div class="mb-2">
                <label asp-for="Name" class="form-label mb-1"></label>
                <input asp-for="Name" class="form-control form-control-sm" />
            </div>

            <div class="mb-2">
                <label class="form-label mb-1">İndeks Resimleri</label>
                <input type="file" asp-for="ImageFiles" multiple class="form-control form-control-sm" />
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-sm btn-primary px-3">Kaydet</button>
                <a asp-action="Index" asp-route-magazineId="@Model.MagazineId" class="btn btn-sm btn-secondary px-3">İptal</a>
            </div>
        </form>
    </div>
</div>
